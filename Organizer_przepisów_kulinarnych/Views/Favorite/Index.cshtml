@model List<FavouriteRecipe>

<h2>Ulubione przepisy</h2>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">Brak ulubionych przepisów.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nazwa przepisu</th>
                <th>Autor</th>
                <th>Kategoria</th>
                <th>Opis</th>
                <th>Składniki</th>
                <th>Instrukcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RecipeName</td>
                    <td>@item.FirstName @item.SurName</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Ingredients</td>
                    <td>@item.Instructions</td>
                </tr>
            }
        </tbody>
    </table>
}