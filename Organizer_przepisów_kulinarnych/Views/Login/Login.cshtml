@model Organizer_przepisów_kulinarnych.BLL.Entities.User

@{
    ViewData["Title"] = "Logowanie";
}

<h2>Zaloguj się</h2>

<form asp-action="Login" method="post">
    <div>
        <label asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username" style="color:red"></span>
    </div>

    <div>
        <label asp-for="PasswordHash"></label>
        <input asp-for="PasswordHash" type="password" />
        <span asp-validation-for="PasswordHash" style="color:red"></span>
    </div>

    <button type="submit">Zaloguj się</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
