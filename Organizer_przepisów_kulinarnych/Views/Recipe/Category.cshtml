@model RecipeListViewModel
@using Organizer_przepisów_kulinarnych.DAL.Entities.Enums

@section Styles {
    <style>
        .main-wrapper {
            display: flex;
            justify-content: space-between;
        }

        .filter-sidebar {
            width: 250px;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
        }

        .recipe-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 30px;
            flex: 1;
            padding-left: 40px;
        }

        .recipe-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            background-color: #fff;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .recipe-card img {
            width: 100%;
            height: 220px;
            object-fit: cover;
        }

        .recipe-card .card-body {
            padding: 20px;
        }

        .recipe-card h5 {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        .recipe-card p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 10px;
        }

        .recipe-card .btn {
            width: 100%;
        }

        .btn-custom-green {
            background-color: #5fce84;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            font-weight: 500;
            text-align: center;
            display: inline-block;
            width: 100%;
            transition: background-color 0.2s ease-in-out;
        }

        .btn-custom-green:hover {
            background-color: #51bb75;
        }

        .btn-favorite-white {
            background-color: white !important;
            border: 1px solid #ccc;
            border-radius: 6px;
            width: 100%;
            padding: 8px 0;
            color: #999;
            font-size: 20px;
            text-align: center;
        }
    </style>
}

<div class="container mt-5">
    <a href="@Url.Action("Index", "Recipe")" class="fw-bold text-primary mb-3 d-inline-block">← Wszystkie przepisy</a>

    <div class="main-wrapper">
        <!-- Filtry -->
        <div class="filter-sidebar shadow-sm">
            <li>
                <a href="@Url.Action("Index", "Recipe")" style="font-weight: bold; font-size: 18px;">
                    Wszystkie przepisy
                </a>
            </li>
            @await Html.PartialAsync("_FilterFormPartial", Model)
        </div>

        <!-- Przepisy -->
        <div class="recipe-grid">
            @if (Model.Recipes.Any())
            {
                foreach (var recipe in Model.Recipes)
                {
                    <div class="recipe-card">
                        @await Html.PartialAsync("_RecipeCard", recipe)
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-muted">Brak dostępnych przepisów.</p>
                </div>
            }
        </div> 
    </div> 
</div> 
