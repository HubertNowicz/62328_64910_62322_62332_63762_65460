@model RecipeListViewModel
@using Organizer_przepisów_kulinarnych.DAL.Entities.Enums

@section Styles {
    <style>
        .main-wrapper {
            display: flex;
            gap: 40px;
        }

        .filter-sidebar {
            width: 250px;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
        }

        .recipe-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
            flex: 1;
        }

        .recipe-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            background-color: #fff;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .recipe-card img {
            width: 100%;
            height: 220px;
            object-fit: cover;
        }

        .recipe-card .card-body {
            padding: 20px;
        }

        .recipe-card h5 {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        .recipe-card p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 10px;
        }

        .recipe-card .btn {
            width: 100%;
        }

        .btn-add {
            background-color: #5fce84;
            color: white;
            font-weight: 500;
        }

        .btn-add:hover {
            background-color: #4ab86d;
        }

        .no-recipes {
            font-size: 1.1rem;
            color: #888;
            margin-top: 20px;
        }

        .btn-custom-green {
            background-color: #5fce84;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            font-weight: 500;
            text-align: center;
            display: inline-block;
            width: 100%;
            transition: background-color 0.2s ease-in-out;
        }

        .btn-custom-green:hover {
            background-color: #4ab86d;
        }
    </style>
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Moje Przepisy</h2>
        <a asp-controller="Recipe" asp-action="Create" class="btn btn-add">
            <i class="bi bi-plus-circle"></i> Dodaj Przepis
        </a>
    </div>

    <div class="main-wrapper">
        <!-- Lewa kolumna: Filtry -->
        <div class="filter-sidebar shadow-sm">
            @await Html.PartialAsync("_FilterFormPartial", Model)
        </div>

        <!-- Prawa kolumna: Przepisy -->
        <div class="recipe-grid">
            @if (Model.Recipes.Any())
            {
                foreach (var recipe in Model.Recipes)
                {
                    <div class="recipe-card">
                        @await Html.PartialAsync("_RecipeCard", recipe)
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="no-recipes">Brak dostępnych przepisów.</p>
                </div>
            }
        </div>
    </div>
</div>
