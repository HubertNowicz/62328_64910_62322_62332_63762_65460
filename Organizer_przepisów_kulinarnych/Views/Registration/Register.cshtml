@model Organizer_przepisów_kulinarnych.BLL.Entities.User

@{
    ViewData["Title"] = "Rejestracja";
}

<h2>Rejestracja</h2>

<form asp-action="Register" method="post">
    <div>
        <label asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username" style="color:red"></span>
    </div>

    <div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Surname"></label>
        <input asp-for="Surname" />
        <span asp-validation-for="Surname" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" style="color:red"></span>
    </div>

    <div>
        <label asp-for="PasswordHash"></label>
        <input asp-for="PasswordHash" type="password" />
        <span asp-validation-for="PasswordHash" style="color:red"></span>
    </div>

    <button type="submit">Zarejestruj się</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
