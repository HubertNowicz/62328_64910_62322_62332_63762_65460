@model RecipeListViewModel
@using Organizer_przepisów_kulinarnych.DAL.Entities.Enums

@section Styles {
    <style>
        .main-wrapper {
            display: flex;
            gap: 40px;
        }

        .filter-sidebar {
            width: 250px;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
        }

        .recipe-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
            flex: 1;
        }

        .recipe-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            background-color: #fff;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .recipe-card img {
            width: 100%;
            height: 220px;
            object-fit: cover;
        }

        .recipe-card .card-body {
            padding: 20px;
        }

        .recipe-card h5 {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        .recipe-card p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 10px;
        }

        .recipe-card .btn {
            width: 100%;
        }

        .no-recipes {
            font-size: 1.1rem;
            color: #888;
            margin-top: 20px;
        }
        .btn-custom-green {
        background-color: #5fce84;
        color: white;
        font-weight: 500;
        border: none;
        }

        .btn-custom-green:hover {
        background-color: #4ab86d;
        }

    </style>
}

<div class="container mt-5">
    <h2 class="mb-4">Ulubione Przepisy</h2>

    <div class="main-wrapper">
        <!-- Lewa kolumna: Filtry -->
        <div class="filter-sidebar shadow-sm">
            @await Html.PartialAsync("_FilterFormPartial", Model)
        </div>

        <!-- Prawa kolumna: Przepisy -->
        <div class="recipe-grid">
            @if (Model.Recipes.Any())
            {
                foreach (var recipe in Model.Recipes)
                {
                    <div class="recipe-card">
                        @await Html.PartialAsync("_RecipeCard", recipe)
                    </div>
                }
            }
            else
            {
                <p class="no-recipes">Brak ulubionych przepisów.</p>
            }
        </div>
    </div>
</div>
