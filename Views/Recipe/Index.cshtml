@model RecipeListViewModel

@section Styles {
    <style>
        .main-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .filter-sidebar {
            width: 250px;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            height: auto;
        }

        .recipe-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 30px;
            flex: 1;
            padding-left: 40px;
        }

        .recipe-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            background-color: #fff;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .recipe-card img {
            width: 100%;
            height: 220px;
            object-fit: cover;
        }

        .recipe-card .card-body {
            padding: 20px;
        }

        .recipe-card h5 {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        .recipe-card p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 10px;
        }

        .recipe-card .btn {
            width: 100%;
        }
        .recipe-card a.btn,
        .recipe-card form {
        margin-bottom: 10px;
}


.btn-custom-green {
    background-color: #5fce84;
    color: white;
    border: none;
    border-radius: 5px;
    padding: 8px 16px;
    font-weight: 500;
    text-align: center;
    display: inline-block;
    width: 100%;
    transition: background-color 0.2s ease-in-out;
}

.btn-custom-green:hover {
    background-color: #5fce84;
}

.btn-favorite-white {
    background-color: white !important;
    border: 1px solid #ccc;
    border-radius: 6px;
    width: 100%;
    padding: 8px 0;
    color: #999;
    font-size: 20px;
    text-align: center;
}

    </style>
}

<div class="container mt-5">
    <h2 class="text-center mb-5">Wszystkie Przepisy</h2>

    <div class="main-wrapper">
        <!-- Panel filtrów -->
        <div class="filter-sidebar shadow-sm">
            <h5>Sortowanie:</h5>
            <select class="form-select mb-3">
                <option selected>Traﬁność</option>
                <option value="1">Nazwa</option>
                <option value="2">Czas</option>
            </select>

            <h5>Czas przygotowania:</h5>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="time1">
                <label class="form-check-label" for="time1">Do 30 min</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="time2">
                <label class="form-check-label" for="time2">30–60 min</label>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="time3">
                <label class="form-check-label" for="time3">Powyżej 60 min</label>
            </div>

            <h5>Kategorie</h5>
            <ul class="list-unstyled">
                @foreach (var category in Model.Categories)
                {
                    <li>
                        <a href="@Url.Action("Category", "Recipe", new { name = category })"
                           class="d-block py-1 text-decoration-none fw-semibold text-primary">
                            @category
                        </a>
                    </li>
                }
            </ul>
        </div>

        <!-- Lista przepisów -->
        <div class="recipe-grid">
            @if (Model.Recipes.Any())
            {
                foreach (var recipe in Model.Recipes)
                {
                    <div class="recipe-card">
                        @await Html.PartialAsync("_RecipeCard", recipe)
                    </div>
                }
            }
            else
            {
                <p class="text-muted">Brak dostępnych przepisów.</p>
            }
        </div>
    </div>
</div>
